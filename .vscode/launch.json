    "version": "0.2.0",
    "configurations": [

        {
            "name": "Debug tests single run",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": ["--verbose", "--runInBand", "--no-cache"],
            "cwd": "${workspaceRoot}",
            "protocol": "auto",
            "stopOnEntry": false,
            "smartStep": false,
            "console": "internalConsole",
        }
    ]
}